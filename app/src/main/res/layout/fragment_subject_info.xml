<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.SubjectInfoFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="135dp" >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Notes"
            android:id="@+id/btnSem1"
            android:textAllCaps="false"
            android:drawableTop="@drawable/ic_baseline_notes_90"
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/rounded_info_button"
            android:textColor="#fff"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Akash"
            android:id="@+id/btnSem2"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:drawableTop="@drawable/ic_baseline_menu_book_70"
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/rounded_info_button"
            android:textColor="#fff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>