<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#88FFFFFF"> <!-- Ripple color :: WHITE -->

    <item>
        <color android:color="#00000000" /> <!-- Normal bg color :: RED -->
    </item>
    <item android:left="5dp" android:right="5dp">
        <bitmap android:src="@drawable/img_video" />
    </item>
    <item>

        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="#A80C08"
                android:centerColor="#DC6664"
                android:endColor="#00DC6664" />
            <corners android:radius="5dp" />

        </shape>
    </item>
</ripple>